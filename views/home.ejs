<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head') %>
    <title>Homepage</title>
    <style>
      .card {
        transition: transform 0.2s;
        border: none;
      }
      .card:hover {
        transform: scale(1.05);
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
      }
      .container {
        background-color: #f8f9fa;
        padding: 20px;
        border-radius: 8px;
      }
    </style>
  </head>
  <body>
    <%- include('./partials/nav') %>

    <div class="container mt-3">
      <h2 class="text-center mb-4">Latest Blogs</h2>
      <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-4">
        <% blogs.forEach(blog => { %>
          <div class="col">
            <div class="card h-100">
              <img src="<%= blog.coverImageURL %>" class="card-img-top" alt="<%= blog.title %>" />
              <div class="card-body">
                <h5 class="card-title"><%= blog.title %></h5>
                <p class="card-text">A brief description of the blog post to entice readers.</p>
                <a href="/blog/<%= blog._id %>" class="btn btn-primary">View</a>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    </div>

    <%- include('./partials/scripts') %>
  </body>
</html>
